<%= form_with id: "new_message_form", 
  url: messages_path, 
  class: "flex flex-row space-x-2", 
  data: { controller: "message", action: "turbo:submit-end->message#clear" } do |f| %>

  <%= f.text_field :body, placeholder: "What do you want to say?", class: "w-full rounded-md border-gray-200 shadow-sm sm:text-sm" %>
  <%= f.submit "Post message", class: "btn-primary" %>
<% end %>
