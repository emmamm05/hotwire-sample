<div class="flex flex-row space-x-5">
  <%= turbo_stream_from "messages" %>
  <nav class="flex flex-col space-y-1">
    <a
        href="/messages"
        class="block rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700"
        >
        Messages
    </a>
    <a
        href="/"
        class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-700"
        >
       Home 
    </a>
  </nav>
  <div id="main-section" class="flex flex-col w-full space-y-5"> 
    <%= render Messages::New::Component.new %>
    <div id="messages", class="flex flex-col space-y-5"> 
      <%= render Messages::Message::Component.with_collection(@messages) %>
    </div>
  </div>
</div>
