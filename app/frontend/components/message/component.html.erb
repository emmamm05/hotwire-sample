<%= tag.div id: dom_id(message), class: ["w-full", "flex"] do %>
  <div class="flex-none w-74">
    <%= tag.label timestamp %>
  </div>
  <div class="flex-grow text-left px-5">
    <%= tag.label message_body %>
  </div>
  <div class="flex-none">
    <%= button_to 'Delete', message_path(message), method: :delete, class: ["btn-danger"] %>
  </div>
<% end %>

